{
  "name": "clean-ts-api",
  "version": "1.1.0",
  "description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "build:watch": "npm run build -- -w",
    "start": "node dist/main/server.js",
    "start:debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "npm run build && docker-compose up -d --remove-orphans",
    "down": "docker-compose down",
    "lint:all": "eslint 'src/**' '__tests__/**'",
    "lint:fix": "eslint --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --logHeapUsage",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm run test:verbose -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "author": "Lucas SÃ¡",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^24.9.1",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongodb": "^3.5.3",
    "@types/node": "^13.9.3",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.4",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^11.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-commit-msg-linter": "^2.4.2",
    "jest": "^24.9.0",
    "lefthook": "^1.9.0",
    "mockdate": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "bcrypt": "^3.0.8",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongo-round": "^1.0.0",
    "mongodb": "^3.5.5",
    "nodemon": "^2.0.2",
    "swagger-ui-express": "^4.1.4",
    "validator": "^12.2.0"
  },
  "engines": {
    "node": "12.x"
  },
  "volta": {
    "node": "12.22.12"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
